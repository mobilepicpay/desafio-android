<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/users_nav_graph.xml"
    app:startDestination="@id/user_list_fragment">

    <fragment
        android:id="@+id/user_list_fragment"
        android:name="com.picpay.desafio.ui.UserListFragment"
        android:label="UserListFragment" >
        <action
            android:id="@+id/action_userListFragment_to_savedUserFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_userListFragment_to_savedUserFragment2"
            app:destination="@id/saved_user_fragment" />
    </fragment>
    <fragment
        android:id="@+id/saved_user_fragment"
        android:name="com.picpay.desafio.ui.SavedUserFragment"
        android:label="SavedUserFragment" />
</navigation>